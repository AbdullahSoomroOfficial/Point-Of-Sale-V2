<% layout('/layout/boilerplate.ejs') %>

    <div class="container-fluid">
        <div class="row bg-light rounded">
            <div class="col p-4">
                <form action="/category/<%= category._id %>?_method=PUT" method="POST">
                    <div class="mb-3">
                        <label for="category" class="form-label">Edit Category</label>
                        <input type="text" class="form-control" name="category" id="category" placeholder="Category Name" required 
                        value="<%= category.category %>">
                    </div>
                    <button class="btn btn-success col-12">Edit Category</button>
                </form>
            </div>
        </div>
    </div>