<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" type="image/x-icon" href="../img/logo/logo.jpg">
  <title><%= title %> | Point Of Sale</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  <link rel="stylesheet" href="../../css/style.css">
</head>

<body>

  <!-- Sidebar start -->
  <div class="sidebar">
    <img src="../../img/logo/logo.jpg" alt="Logo" class="sidebar-logo">
    <a <% if (page_name === 'dashboard') { %> class="active"<% } %> href="/dashboard">Dashboard</a>
    <a <% if (page_name === 'category') { %> class="active"<% } %> href="/category">Add Category</a>
    <a <% if (page_name === 'sub-category') { %> class="active"<% } %> href="/sub-category">Add Sub Category</a>
    <a <% if (page_name === 'item') { %> class="active"<% } %>href="/item">Add Item</a>
    <a <% if (page_name === 'order') { %> class="active"<% } %>href="/order">Take Order</a>
    <a href="/logout" class="logout-btn">Logout</a>
  </div>
  <!-- Sidebar end -->

  <!-- overlay div start -->
  <div class="overlay"></div>
  <!-- overlay div end -->

  <!-- Content start -->
  <div class="content">

    <div class="my-3 d-flex justify-content-between align-items-center">

      <!-- Menu Icon -->
      <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-list menu-icon" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
      </svg>

      <!-- Cross Icon -->
      <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-x-lg cross-icon" viewBox="0 0 16 16">
        <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
      </svg>

      <h1 class="text-white"><%= heading %></h1>
      <a href="/order" class="btn btn-info">Take Order</a>
      
    </div>

      <!-- flash -->
      <%-include('../partials/flash.ejs') %> 

      <%- body %>

    <!-- <img class="logo" src="../../img/logo/logo.jpg" alt="Logo">  -->
  </div>
  <!-- Content end -->
  
  <!-- script for sidebar open & close -->
  <script src="../../js/script.js"></script>
  <!-- Bootstrap script for form validation   -->
  <script src="../../js/form-validation-with-BS.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>

</html>